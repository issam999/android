<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="396dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="396dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/namee"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_marginStart="4dp"
                android:gravity="center_horizontal"
                android:text="Product "
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/name2"
                app:layout_constraintStart_toEndOf="@+id/name2"
                app:layout_constraintTop_toTopOf="@+id/name2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="78dp"
                android:layout_height="34dp"
                android:layout_marginStart="12dp"
                android:gravity="center_horizontal"
                android:text="Name : "
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imagee"
                app:layout_constraintTop_toTopOf="@+id/imagee" />

            <TextView
                android:id="@+id/qty_choisi"
                android:layout_width="66dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:gravity="center_horizontal"
                android:text="quantitÃ©"
                app:layout_constraintBottom_toBottomOf="@+id/qty2"
                app:layout_constraintStart_toEndOf="@+id/qty2"
                app:layout_constraintTop_toTopOf="@+id/qty2"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/qty2"
                android:layout_width="77dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="Quantity : "
                app:layout_constraintStart_toEndOf="@+id/imagee"
                app:layout_constraintTop_toBottomOf="@+id/name2" />

            <TextView
                android:id="@+id/pricee"
                android:layout_width="43dp"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:gravity="center_horizontal"
                android:text="120"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/price2"
                app:layout_constraintTop_toBottomOf="@+id/price2" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:gravity="center_horizontal"
                android:text="Price"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/qty_choisi"
                app:layout_constraintStart_toEndOf="@+id/namee"
                app:layout_constraintTop_toTopOf="@+id/namee"
                app:layout_constraintVertical_bias="0.742" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Filter Name : "
                app:layout_constraintStart_toStartOf="@+id/qty2"
                app:layout_constraintTop_toBottomOf="@+id/qty2" />

            <ImageView
                android:id="@+id/imagee"
                android:layout_width="88dp"
                android:layout_height="86dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView18"
                app:layout_constraintEnd_toEndOf="@+id/qty_choisi"
                app:layout_constraintStart_toStartOf="@+id/qty_choisi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>